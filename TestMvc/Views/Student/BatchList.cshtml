@model IEnumerable<TestMvc.Models.Batch>

@{
    ViewBag.Title = "BatchList";
}

<h2>BatchList</h2>

<p>
    @Html.ActionLink("Create New", "AddBatch")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BatchName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BatchName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteBatch", new { id=item.Id })
        </td>
    </tr>
}

</table>
